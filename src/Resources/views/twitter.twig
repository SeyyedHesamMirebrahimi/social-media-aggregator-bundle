{% if message.retweet is not null %}
{% set displayMessage = message.retweet %}
{% else %}
{% set displayMessage = message %}
{% endif %}
<article>
    {% if message.retweet is not null %}<p class="retweeted-by"><a href="{{ message.authorURL }}">{{ message.author }}</a> retweeted</p> {% endif %}
    <a href="{{ displayMessage.authorURL }}" target="_blank"><h1><img src="{{ displayMessage.authorThumbnail|replace({'_normal.': '_mini.'}) }}" alt="Profile image of {{ displayMessage.author }}"> {{ displayMessage.author }}</h1> <span class="author-name">@{{ displayMessage.screenName }}</span></a> <small class="time"> <a href="{{ displayMessage.URL }}" target="_blank" title="{{ displayMessage.date|date('D M j Y, H:i:s') }}">{{ displayMessage.date|time_diff }}</a></small>
    <p class="twitter--message-body">{{ displayMessage.parsedBody|raw }}</p>
    {#<p>{{ displayMessage.fetchSource }}</p>#}
</article>
